.container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.header {
  position: fixed;
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  background-color: #fff;
  z-index: 99;
}

.box {
  width: 700rpx;
  height: 68rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  color: #999;
  background-color: #f5f5f5;
}

.box image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  margin-bottom: 2rpx;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 110rpx;
  /* background-color: #f5f5f5; */
}

.head-img {
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

.books-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: -30rpx;
  padding: 0 90rpx 60rpx 90rpx;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate3d(-50%, 0, 0);
  transform: translate3d(-50%, 0, 0);
}
