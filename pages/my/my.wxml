<!--pages/my/my.wxml-->
<view class="container">
  <image src="/images/my/my@bg.png" class="bg" />
  <v-button wx:if="{{!authorized}}" open-type="{{'getUserInfo'}}" bind:getuserinfo="onGetUserInfo" class="avatar-position">
    <image slot="img" class="avatar" src="/images/my/my.png" />
  </v-button>
  <view wx:if="{{authorized}}" class="avatar-container avatar-position">
    <image src="{{userInfo.avatarUrl}}" class="avatar" />
    <text>{{userInfo.nickName}}</text>
  </view>
  <view class="about-container">
    <view class="about-us">
      <image src="/images/my/about.png" />
      <text class="description">关于我们</text>
    </view>
    <view class="about-us">
      <text class="book-num">{{bookCount}}</text>
      <text class="description">喜欢的书</text>
    </view>
  </view>
  <view class="like-container">
    <image class="headline" src="/images/my/like.png" />
    <view class="preview-container">
      <block wx:for="{{classics}}" wx:key="{{index}}">
        <v-preview bind:tapping="onJumpToDetail" class="preview" classic="{{item}}" />
      </block>
    </view>
  </view>
</view>

<image bindtap="onStudy" class="study" src="/images/my/study.png" />