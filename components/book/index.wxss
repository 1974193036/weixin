/* components/book/index.wxss */

.container {
  width: 240rpx;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  margin-top: 60rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
  border-radius: 4px;
  overflow: hidden;
}

.container image {
  width: 100%;
  height: 226rpx;
  /* border-radius: 2px; */
}

.description {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 20rpx 18rpx 0 20rpx;
  font-size: 24rpx;
  /* border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px; */
  background-color: #fff;
}

.title {
  line-height: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.author {
  font-size: 20rpx;
  line-height: 22rpx;
  color: #999;
  margin-top: 12rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.foot {
  font-size: 20rpx;
  line-height: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: #666;
}
