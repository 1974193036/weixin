/* components/search/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.header {
  position: fixed;
  z-index: 99;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  background-color: #fff;
}

.search-container {
  display: inline-flex;
  flex-direction: row;
  flex: 1;
  align-items: center;
  border-radius: 50px;
  margin-left: 20rpx;
  background-color: #f5f5f5;
}

.icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 24rpx;
  margin-right: 16rpx;
}

.cancel-img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.cancel {
  line-height: 68rpx;
  width: 120rpx;
  text-align: center;
  display: inline-block;
  border: none;
}

.in-bar {
  color: #999;
}

.bar {
  display: inline-block;
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
}

.history {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  margin-top: 160rpx;
}

.history.hot-search {
  margin-top: 70rpx;
}

.title {
  line-height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 28rpx;
}

.chunk {
  width: 10rpx;
  height: 28rpx;
  margin-right: 20rpx;
  margin-top: -2rpx;
  background-color: #000;
}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 24rpx;
  margin-left: 56rpx;
}

.tags v-tag {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.empty-tip {
  display: inline-block;
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
}

.loading {
  margin: 32rpx auto;
  display:flex;
  justify-content:center;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate3d(-50%, 0, 0);
  transform: translate3d(-50%, 0, 0);
}

.books-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 100rpx;
  padding: 0 90rpx 0 90rpx;
  justify-content: space-between;
}

.books-container v-book {
  margin-bottom: 25rpx;
}
