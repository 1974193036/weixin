/* components/preview/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 330rpx;
  margin-bottom:40rpx;
  background-color: #fff;
}

.head {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}

.tag {
  margin-left: 20rpx;
  margin-top: -2rpx;
  height: 40rpx;
  width: 72rpx;
  font-size: 24rpx;
  background-color: #f7f7f7 !important;
}

.like {
  margin-top: 4rpx;
  margin-right: 4rpx;
}

.other-img {
  width: 100%;
  height: 240rpx;
}

.music-img {
  border-radius: 50%;
  width: 240rpx;
  height: 240rpx;
}

.text {
  padding: 30rpx;
  font-size: 28rpx;
  height: 150rpx;
  color: #666;
  overflow: hidden;
}
