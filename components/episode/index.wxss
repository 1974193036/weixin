/* components/episode/index.wxss */

.container {
  display: flex;
  flex-direction: row;
  height: 60rpx;
}

.index-container {
  display: flex;
  flex-direction: row;
  /* align-items: baseline; */
}

.plain {
  font-size: 32rpx;
  line-height: 32rpx;
  margin-top: 20rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}

.line {
  height: 44rpx;
  margin-right: 14rpx;
  margin-top: 6rpx;
  border: 1px solid #000;
}

.date-container {
  display: flex;
  flex-direction: column;
  margin-top: 6rpx;
}

.month {
  font-size: 24rpx;
  line-height: 24rpx;
}

.year {
  font-size: 20rpx;
}
